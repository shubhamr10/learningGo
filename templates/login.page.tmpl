{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Login</h1>
                <form action="/users/login" method="post" novalidate>
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <div class="from-group mt-3">
                        <label for="email">Email</label>
                        {{with .Form.Errors.Get "email"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input type="email" class="form-control {{with .Form.Errors.Get "email"}} is-invalid {{end}}"
                               id="email" autocomplete="off" name="email" value="" required/>
                    </div>
                    <div class="from-group mt-3">
                        <label for="password">Password</label>
                        {{with .Form.Errors.Get "password"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input type="password"
                               class="form-control {{with .Form.Errors.Get "password"}} is-invalid {{end}}"
                               id="password" autocomplete="off" name="password" value="" required/>
                    </div>
                    <hr>
                    <input type="submit" class="btn btn-primary" value="Submit"/>
                </form>
            </div>
        </div>
    </div>
{{end}}